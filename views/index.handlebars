<h1>Eat-Da-Burger!</h1>

<img src="public\assets\images\gourmet-burger-scaled.jpg" alt="delicious burger">

<h2>Burgers To Be Eaten:</h2>

<ul>
    {{#each burgers}}
    {{#unless eaten}}
    {{> burgers/burgers-block eaten=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Already Eaten</h2>

<ul>
    {{#each burgers}}
    {{#if eaten}}
    {{> burgers/burger-block eaten=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="eaten">Eaten?</label><br>
        <input type="radio" name="eaten" value="1" checked> Eaten!<br>
        <input type="radio" name="eaten" value="0"> Not eaten!
    </div>

    <button type="submit">Add Burger</button>
</form>